{
  "compilerOptions": {
    "target": "ES6",                        // Target modern JavaScript version
    "module": "ES6",                        // Use ES6 modules
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "outDir": "web/dist",                     // Redirect output structure to the directory
    "rootDir": "./src",                     // Specify the root directory of input files
    "moduleResolution": "node"              // Use Node.js module resolution strategy
  },
  "include": [
    "src/**/*"                            // Which files to include
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}